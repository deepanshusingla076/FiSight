rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User subcollections (transactions, goals, investments)
      match /{subcollection}/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Allow nested subcollections
        match /{nestedCollection}/{nestedDocument} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Global read-only data (if needed in the future)
    match /global/{document} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write global data
    }
    
    // Market data or public financial data (if needed)
    match /market-data/{document} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
